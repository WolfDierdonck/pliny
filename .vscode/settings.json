{
    "python.analysis.typeCheckingMode": "basic",
    "pylint.args": [
        "--rcfile=.pylintrc"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always",
        "source.fixAll.format": "always"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "prettier.requireConfig": true     // Ensure Prettier uses the local config
}